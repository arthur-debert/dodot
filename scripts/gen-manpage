#!/usr/bin/env bash
set -euo pipefail

# Build output directory (matching main build script)
BIN_DIR="bin"
MAN_DIR="man/man1"

# Create man directory
mkdir -p "${MAN_DIR}"

# Always build for the current platform to ensure compatibility
if [ ! -f "${BIN_DIR}/dodot" ]; then
    echo "Building dodot for current platform..."
    ./scripts/build
fi
DODOT_BIN="${BIN_DIR}/dodot"

# Build the man page generator tool
echo "Building dodot-manpage tool..."
go build -o "${BIN_DIR}/dodot-manpage" ./cmd/dodot-manpage

# Generate man page
echo "Generating man page..."
"${BIN_DIR}/dodot-manpage" > "${MAN_DIR}/dodot.1"

# Compress the man page
if [ -f "${MAN_DIR}/dodot.1" ]; then
    gzip -f "${MAN_DIR}/dodot.1"
    echo "✅ Man page generated in ${MAN_DIR}/dodot.1.gz"
else
    echo "❌ Failed to generate man page"
    exit 1
fi