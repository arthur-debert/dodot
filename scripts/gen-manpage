#!/usr/bin/env bash
set -euo pipefail

# Always build the binary to ensure it's for the current platform
echo "Building my-awesome-cli..."
./scripts/build

# Create man directory
mkdir -p man/man1

# Generate man page
echo "Generating man page..."
./my-awesome-cli man > man/man1/my-awesome-cli.1 || {
    echo "Note: 'man' subcommand not implemented yet"
    echo "Creating placeholder man page..."
    cat > man/man1/my-awesome-cli.1 << EOF
.TH MY-AWESOME-CLI 1 "$(date +"%B %Y")" "my-awesome-cli manual"
.SH NAME
my-awesome-cli \- Description of your CLI tool
.SH SYNOPSIS
.B my-awesome-cli
[\fIOPTIONS\fR] [\fICOMMAND\fR]
.SH DESCRIPTION
Description of your CLI tool
.SH OPTIONS
.TP
.BR \-h ", " \-\-help
Show help message
.TP
.BR \-v ", " \-\-version
Show version information
.SH AUTHORS
Arthur Debert <arthur@debert.xyz>
.SH COPYRIGHT
Copyright (C) 2024 Arthur Debert
EOF
}

# Compress the man page
if [ -f "man/man1/my-awesome-cli.1" ]; then
    gzip -f man/man1/my-awesome-cli.1
    echo "✅ Man page generated in man/man1/my-awesome-cli.1.gz"
else
    echo "❌ Failed to generate man page"
    exit 1
fi