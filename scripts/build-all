#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NC='\033[0m' # No Color

echo -e "${BLUE}${BOLD}ðŸš€ Building complete dodot distribution...${NC}"
echo

# Clean build directory completely
echo -e "${BLUE}Cleaning build directory...${NC}"
rm -rf dist/build
mkdir -p dist/build
echo -e "${GREEN}âœ… Build directory cleaned${NC}"
echo

# Build binary
echo -e "${BLUE}Building binary...${NC}"
./scripts/build
echo

# Generate completions
echo -e "${BLUE}Generating shell completions...${NC}"
./scripts/gen-completion
echo

# Generate man page
echo -e "${BLUE}Generating man page...${NC}"
./scripts/gen-manpage
echo

# Show final structure
echo -e "${GREEN}${BOLD}âœ… Build complete! Final structure:${NC}"
find dist/build -type f | sort | while read -r file; do
    echo -e "  ${BLUE}$(echo "$file" | sed 's|dist/build/||')${NC}"
done

echo
echo -e "${GREEN}All build artifacts are in: ${BOLD}dist/build/${NC}"