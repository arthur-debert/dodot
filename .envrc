#!/bin/bash

# Universal project environment variables
export PROJECT_ROOT="$(pwd)"
export PKG_NAME="dodot"
export GH_USER="arthur-debert"
export GH_URL="https://github.com/arthur-debert/dodot"

# Derived URLs
export GH_REPO="arthur-debert/dodot"
export GH_CLONE_URL="git@github.com:arthur-debert/dodot.git"

# Add project's bin directory to PATH
export PATH="$PROJECT_ROOT/bin:$PATH"

# Go-specific environment
export GOPATH="${GOPATH:-$HOME/go}"
export PATH="$PATH:$GOPATH/bin"
